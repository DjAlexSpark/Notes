<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="borderPane" stylesheets="@NoteCss.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.notes.NoteController">
   <top>
      <VBox fx:id="vboxTop" BorderPane.alignment="CENTER">
         <children>
            <MenuBar fx:id="menuBar">
              <menus>
                <Menu mnemonicParsing="false" text="File">
                  <items>
                        <MenuItem fx:id="saveAndExitButton" mnemonicParsing="false" onAction="#onActionSaveAndExit" text="Save and close" />
                    <MenuItem fx:id="closeButton" mnemonicParsing="false" onAction="#closeNote" text="Close" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                  <items>
                    <MenuItem fx:id="deleteButton" mnemonicParsing="false" onAction="#deleteNote" text="Delete" />
                        <MenuItem fx:id="addImageButton" mnemonicParsing="false" onAction="#onActionAddImage" text="Add Image" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                  <items>
                    <MenuItem fx:id="aboutButton" mnemonicParsing="false" onAction="#aboutNote" text="About" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
            <TextField fx:id="textField" prefHeight="40.0" prefWidth="600.0" />
         </children>
      </VBox>
   </top>
   <center>
      <TextArea fx:id="textArea" BorderPane.alignment="CENTER" />
   </center>
   <bottom>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <ScrollPane fx:id="scrollPane" fitToWidth="true" vbarPolicy="NEVER" />
            <HBox fx:id="hboxForButtons" alignment="CENTER_RIGHT" fillHeight="false" prefHeight="36.0" prefWidth="600.0">
               <children>
                  <Button fx:id="buttonFolder" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onActionOpenFolder" text="Open Folder">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="saveButton" contentDisplay="CENTER" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#onActionSaveAndExit" text="Save and Exit">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </bottom>
</BorderPane>
